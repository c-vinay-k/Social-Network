<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnknownUserProfile">

    <RelativeLayout
        android:id="@+id/ukr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:id="@+id/ukcavertv"
            android:scaleType="fitXY"
            android:background="@color/white">

        </ImageView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ukcard"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:background="@color/colorGray02"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp">


            <LinearLayout
                android:id="@+id/uklinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/ukavatartv"
                    android:src="@drawable/ic_images"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_below="@id/ukcard">

                    <TextView
                        android:id="@+id/uknametv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="1dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/text_gray"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/ukemailtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/ukagetv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="15dp"
                        android:textAlignment="center"
                        android:textColor="@color/text_gray" />

                </LinearLayout>

            </LinearLayout>





        </androidx.cardview.widget.CardView>


